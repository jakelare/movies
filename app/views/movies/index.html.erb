<h1><%= pluralize(@movies.size, 'Movie')%></h1>


  <% @movies.each do |movie| %>
<article>
  <header>
    <strong><%= movie.name %></strong>
  </header>
  <p>
    <%= truncate(movie.description, length: 10, separator: '') %>
  </p>
  <table>
    <tr>
      <th>When:</th>
      <td><%= movie.starts_at %></td>
      </tr>
    <tr>
      <th>Where:</th>
      <td><%= movie.location %></td>
      </tr>
    <tr>
      <th>Price:</th>
      <% if movie.price == 0 %>
          <td>Free</td>
          <% else %>
          <td><%= number_to_currency(movie.price) %></td>
          <% end %>
    </tr>
  </table>
  </article>
  <% end %>



